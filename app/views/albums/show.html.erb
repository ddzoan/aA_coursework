<h1><%= link_to @album.band.name, band_url(@album.band) %></h1>
<h2>Album: <%= @album.name %> (<%= @album.recording_type %>)</h2>
<div class='col-md-4'>
  <%= link_to 'Edit Album info', edit_album_url(params[:id]), role: 'button', class: 'btn btn-default' %>
  <h4>Tracks</h4>
  <%= link_to 'Create New Track', new_album_track_url(params[:id]), role: 'button', class: 'btn btn-default' %>
  <ul>
    <% @album.tracks.each do |track| %>
      <li><%= link_to "#{track.name}#{" (Bonus)" if track.track_type == 'bonus'}", track_url(track) %></li>
    <%#= render 'children', children: @band.albums %>
    <% end %>
  </ul>
  <%= button_to 'Delete this Album', album_url(@album), method: :delete, class: 'btn btn-danger' %>
</div>
