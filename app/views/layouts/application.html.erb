<!DOCTYPE html>
<html>
<head>
  <title>MusicManager</title>
  <%#= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap-theme.min.css">
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
    <div class="navbar">
      <ul class="nav navbar-nav">
        <% if logged_in? %>
          <li class="active">
            <h3>
              <%= link_to current_user.email, user_url(current_user) %>
            </h3>
          </li>
          <li>
            <h3>
              <%= link_to 'Bands', bands_url, role: 'button', class: 'btn btn-primary' %>
            </h3>
          </li>
        <% end %>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
          <%= button_to 'Log out', session_url, method: :delete, class: 'btn btn-danger' %>
        <% else %>
          <%= link_to 'Sign in', new_session_url, role: "button", class: 'btn btn-default' %>
        <% end %>
      </ul>
    </div>
  </div>
  <div class='container-fluid'>
      <%= render 'shared/show_flash' %>
    <%= yield %>
  </div>

</body>
</html>
